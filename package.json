{
  "name": "nextjs-ts-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint \"{pages,lib,components}/**\" --fix",
    "format": "prettier \"{pages,lib,components}/**\" --write",
    "test": "jest",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --cache --fix"
      ],
      "**/*.+(ts|tsx|json|css)": [
        "prettier --write"
      ]
    }
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4.0.3",
    "date-fns": "2.23.0",
    "gray-matter": "4.0.3",
    "next": "11.1.0",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remark": "13.0.0",
    "remark-html": "13.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.7.6",
    "@types/react": "17.0.14",
    "@types/testing-library__jest-dom": "5.14.0",
    "@types/testing-library__react": "10.2.0",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "autoprefixer": "10.3.0",
    "babel-jest": "27.1.0",
    "eslint": "7.30.0",
    "eslint-config-next": "11.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "7.0.2",
    "jest": "27.1.0",
    "lint-staged": "11.1.2",
    "postcss": "8.3.5",
    "tailwindcss": "2.2.4",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  }
}
