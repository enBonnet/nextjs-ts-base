{
  "name": "nextjs-ts-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint \"{pages,lib,components}/**\" --fix",
    "format": "prettier \"{pages,lib,components}/**\" --write",
    "test": "jest",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "eslint --cache --fix"
      ],
      "**/*.+(ts|tsx|json|css)": [
        "prettier --write"
      ]
    }
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "4.0.3",
    "date-fns": "2.11.1",
    "gray-matter": "4.0.2",
    "next": "10.0.0",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "remark": "12.0.0",
    "remark-html": "12.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/jest": "26.0.21",
    "@types/node": "14.14.35",
    "@types/react": "17.0.3",
    "@types/testing-library__jest-dom": "5.9.5",
    "@types/testing-library__react": "10.2.0",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "autoprefixer": "10.2.5",
    "babel-jest": "26.6.3",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "husky": "^5.2.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "postcss": "8.2.8",
    "tailwindcss": "2.0.4",
    "ts-jest": "26.5.4",
    "typescript": "4.2.3"
  }
}
